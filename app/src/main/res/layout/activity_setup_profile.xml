<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="#FEFEFE"
    tools:context=".SetupProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_placeholder"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile Information"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold|normal"
        android:textColor="#1C47E6"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please set your name and optional Profile Image"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="13sp"
        android:textStyle="bold|normal"
        android:textColor="#383839"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shape"
                android:ems="1"
                android:hint="Type your Name"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#1C1C1C"
                android:textSize="20sp"
                android:textStyle="bold|normal" />

            <EditText
                android:id="@+id/role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shape"
                android:ems="1"
                android:layout_marginTop="10dp"
                android:hint="Type your Role"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#1C1C1C"
                android:textSize="20sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/continueBtn02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#228C27"
                android:text="Setup Profile"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>